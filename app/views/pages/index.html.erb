<div class="ui grid centered" id="contact" style="margin-top: 8vh;"><i class="big angle down icon centered" style="opacity: 0.9;"></i></div>

<div class="ui grid stackable">
  <div class="four wide column"></div>
  <div class="eight wide column" style="margin-top: 2vh;">
    <div class="ui very padded segment stacked align center" style="background: #d3fff2">
      <div class="ui icon header center aligned" style="opacity: 0.75;">
        <i class="envelope outline icon"></i>
          Contact
      </div>
      <div class="ui divider hidden"></div>

      <div class="ui attached icon message hidden">
        <i class="notched circle loading icon"></i>
        <i class="close icon"></i>
        <div class="content">
          <div class="header">
            Just one second
          </div>
          <p>We're fetching that content for you.</p>
        </div>
      </div>

      <div class="ui raised teal segment">
        <%= form_for(:message, html: { class: 'ui form', role: 'form' }, url: message_path) do |f|%>
          <div class="field">
            <label>Your name</label>
            <%= f.text_field :sender, placeholder: 'Name'  %>
          </div>
          <div class="field">
            <label>Your email</label>
            <%= f.text_field :email, placeholder: 'Email'  %>
          </div>
          <div class="field">
            <label>Your message</label>
            <%= f.text_area :message, rows: '2'  %>
          </div>
          <%= f.submit 'Submit', class: 'ui primary button' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
