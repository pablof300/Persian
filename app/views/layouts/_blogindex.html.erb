<div class="ui centered grid" style='margin-top: 5vh;'>
  <div class="ui centered row">
    <div class="eight wide column" style='opacity: 0.8'>
      <h1 class="">my blog</h1>
      <h3 class="ui horizontal divider header">
        <i class="pencil alternate alternate icon"></i>
      </h3>
    </div>
  </div>
  <% if @cms_site.present? %>
    <% @cms_site.pages.each do |page| %>
      <% if page != @cms_site.pages.first %>
        <div class="ui row">
          <%= link_to(request.original_url + page.full_path) do %>
          <div class="ui raised card" style="padding: 10px; opacity: 0.9">
            <div class="content">
              <div class="center aligned header"><%= page.label %></div>
              <div class="center aligned description" style='opacity: 0.3'>
                <p><%= cms_fragment_content(:desc, page) %></p>
              </div>
            </div>
            <div class="extra content">
             <span class="left floated like">
               <i class="calendar outline icon"></i>
               <%= page.created_at.month %>/<%= page.created_at.day %>
             </span>
             <span class="right floated star">
               <img class="ui avatar image" src="https://semantic-ui.com/images/avatar/small/jenny.jpg"> Pablo
             </span>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
